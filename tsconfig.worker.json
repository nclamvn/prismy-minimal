{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": false
  },
  "include": [
    "src/lib/services/queue/**/*",
    "src/lib/parsers/**/*",
    "src/lib/services/chunker/**/*",
    "src/lib/services/translation/**/*",
    "src/lib/services/openai-translate/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}